{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@theme/*": ["theme/*"]
    }
  },
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
